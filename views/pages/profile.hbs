<div class="row justify-content-center">
    <div class="col-lg-6 col-md-8">
        <div class="card">
            <div class="card-body">
                <div class="d-flex flex-column align-items-center">
                    <img src="/avatar/{{user.avatar}}" alt="Profile" class="rounded-circle mb-3 profile-img">
                    <h3>{{user.fullname}}</h3>
                </div>
                <div class="">
                    <h5>Detalles:</h5>
                    <div class="row py-2">
                        <div class="col-lg-3 col-md-4 text-secondary">Username</div>
                        <div class="col-lg-9 col-md-8">{{user.username}} </div>
                    </div>
                    <div class="row py-2">
                        <div class="col-lg-3 col-md-4 text-secondary">Email</div>
                        <div class="col-lg-9 col-md-8">{{user.email}} </div>
                    </div>
                    <div class="row py-2">
                        <div class="col-lg-3 col-md-4 text-secondary">Teléfono</div>
                        <div class="col-lg-9 col-md-8">{{user.phone}} </div>
                    </div>
                    <div class="row py-2">
                        <div class="col-lg-3 col-md-4 text-secondary">Dirección</div>
                        <div class="col-lg-9 col-md-8">{{user.address}} </div>
                    </div>
                    <div class="row py-2">
                        <div class="col-lg-3 col-md-4 text-secondary">Edad</div>
                        <div class="col-lg-9 col-md-8">{{user.age}} </div>
                    </div>
                    <div class="row py-2">
                        <div class="col-lg-3 col-md-4 text-secondary">Administrador</div>
                        <div class="col-lg-9 col-md-8">{{#if user.is_admin}}Si{{else}}No{{/if}}</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>